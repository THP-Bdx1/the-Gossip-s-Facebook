<h1>Ton nouveau gossip</h1>

<%= form_for @gossip, url: {action: "create"} do |f| %>
<div class="form-group">
    <%= f.text_field :title, placeholder: 'Ton joli petit titre', class: "form-control" %>
</div>
<div class="form-group">
<%= f.text_area :content, placeholder: 'Ton vilain gossip', class: "form-control" %>
</div>
<div class="form-group">
    <button class ="btn btn-outline-dark" type="submit">Créer la catégorie</button>
</div>
<% end %>