<h1>Ton nouveau gossip</h1>

<%= form_for @gossip do |f| %>
<div class="form-group">
    <%= f.text_field :anonymous_gossiper, placeholder: 'Ton pseudo "anonyme"', class: "form-control" %>
</div>
<div class="form-group">
<%= f.text_area :content, placeholder: 'Ton vilain gossip', class: "form-control" %>
</div>
<div class="form-group">
    <button class ="btn btn-primary" type="submit">Créer la catégorie</button>
</div>
<% end %>